<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
       <h3> User login :  <%= user.login %></h3>
       <h3> User status :  <%= user.connected %></h3>
       <button id="modify-btn" onclick="display()">Modifier </button>
    <form >
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="update-form" class="form" action="users" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <h3 class="text-center text-info">Update User</h3>
                            <div class="form-group">
                                <label for="login" class="text-info">New Username:</label><br>
                                <input type="text" name="login" id="login" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">New Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" id =" subBtn" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <form id="back-form" action="/admin/users">
        <input type="submit" value="Back TO Users list" />
    </form>
    </body>
    <script>
        function display(){
            document.getElementById("modify-form").style.display="block";
        }
    </script>
</html>