<!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Liste des utilisateurs</title>
    <%- include ("partials/head.ejs") %>
    </head>
    <body>
        <%- include ("partials/menu.ejs") %>
        <div class="limiter">
            <div class="container-table100">
                <div class="wrap-table100">
                    <div class="table100">
                        <table>
                            <thead>
                                <tr class="table100-head">
                                    <th class="column1">User login</th>
                                    <th class="column2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(users) {%>
                                    <tr>
                                        <td class="column1"><%= users %></td>
                                        <td class="column2"><a href="/admin/users/<%=users%>">show</a></td>
                                        <td class="column3"><a href="/admin/users/<%=users%>?_method=DELETE">delete</a></td>
                                    </tr>
                                <% }) %>
                             </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>